<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiaolei.pervue.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qiaolei.pervue.entity.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="nameZh" property="nameZh" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, nameZh
    </sql>

    <resultMap id="mapVo" type="com.qiaolei.pervue.entity.RoleVo" extends="BaseResultMap">
        <result column="mids" property="mids"></result>
        <result column="mnames" property="mnames"></result>
    </resultMap>

    <select id="selectPageVo" resultMap="mapVo">
                select r.*,
        GROUP_CONCAT(m.id) mids,
        GROUP_CONCAT(m.name) mnames
            from role r
         LEFT JOIN menu_role mr on r.id = mr.rid
         LEFT JOIN menu m on m.id = mr.mid

        <where>
            <if test="vo != null">
                <if test="vo.name != null and vo.name != ''">
                    and vo.name like concat('%',#{vo.name},'%')
                </if>
            </if>
        </where>
         group by r.id
    </select>


</mapper>
