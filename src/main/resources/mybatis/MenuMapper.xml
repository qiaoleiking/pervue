<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiaolei.pervue.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qiaolei.pervue.entity.Menu">
        <id column="id" property="id" />
        <result column="url" property="url" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="name" property="name" />
        <result column="iconCls" property="iconCls" />
        <result column="keepAlive" property="keepAlive" />
        <result column="requireAuth" property="requireAuth" />
        <result column="parentId" property="parentId" />
        <result column="enabled" property="enabled" />
        <result column="create_time" property="create_time" />

        <collection property="menus" ofType="com.qiaolei.pervue.entity.Menu">
            <!--别名字段column是我们自己手写-->
            <id column="id1" property="id" />
            <result column="url1" property="url" />
            <result column="path1" property="path" />
            <result column="component1" property="component" />
            <result column="name1" property="name" />
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, path, component, name, iconCls, keepAlive, requireAuth, parentId, enabled, create_time
    </sql>

    <select id="listMenus" resultMap="BaseResultMap">
         select m1.*,m2.id id1,m2.url url1,m2.path path1,m2.component component1,m2.`name` name1
         from menu m1 LEFT JOIN menu m2 on m1.id=m2.parentId where m1.parentId=1
    </select>

    <select id="listMenuByUsername" resultMap="BaseResultMap">
            select m1.*,m2.id id1,
            m2.path path1,
            m2.component component1,
            m2.`name` name1
             from menu m1
            LEFT JOIN menu m2 on m1.id = m2.parentId
            WHERE
                    m1.parentId = 1
            AND m2.id IN (
                select mr.mid
                from `user` u
                LEFT JOIN user_role ur on u.id = ur.uid
                LEFT JOIN menu_role mr on ur.rid = mr.rid
             where
                u.username = #{username}
            )
    </select>
</mapper>
